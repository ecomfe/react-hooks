{
    "include": [
        "packages/*/src/**/*.ts",
        "packages/*/docs/**/*.ts",
        "packages/*/docs/**/*.tsx",
    ],
    "exclude": [
        "packages/**/__tests__/**"
    ],
    "compilerOptions": {
        "jsx": "preserve",
        "allowJs": false,
        "target": "ES2015",
        "module": "CommonJS",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "noEmit": false,
        "declaration": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    }
}
